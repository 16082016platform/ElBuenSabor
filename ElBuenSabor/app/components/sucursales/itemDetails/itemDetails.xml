<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:widgets="utils/widgets" navigatedTo="navigatedTo" id="sucursalesModelDetailsScreen" cssClass="screen">
    <Page.actionBar>
        <widgets:action-bar />
    </Page.actionBar>

    <ScrollView>
        <StackLayout>

            <GridLayout rows="auto, *">
                <GridLayout rows="auto" columns="*, *">


                </GridLayout>
                <StackLayout row="1">


                    <Image width="100" height="100" src="{{ imagen }}" />


                    <Label text="{{ activo }}" />


                    <TextView text="{{ direccion }}" />


                    <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item field field--heading" id="nombreField">


                        <Label col="0" row="1" text="{{ nombre }}" cssClass="h1" textWrap="true" />

                        <!-- nombre content -->

                    </GridLayout>

                    <StackLayout cssClass="form-item-border" height="1"></StackLayout>


                    <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item field field--textBlock" id="celularField">


                        <Label text="Celular" cssClass="label" colSpan="2" row="0" />


                        <Label colSpan="2" row="1" text="{{ celular }}" cssClass="label" textWrap="true" />

                        <!-- celular content -->

                    </GridLayout>

                    <StackLayout cssClass="form-item-border" height="1"></StackLayout>


                    <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item field field--textBlock" id="telefonoField">


                        <Label text="TelÃ©fono" cssClass="label" colSpan="2" row="0" />


                        <Label colSpan="2" row="1" text="{{ telefono }}" cssClass="label" textWrap="true" />

                        <!-- telefono content -->

                    </GridLayout>

                    <StackLayout cssClass="form-item-border" height="1"></StackLayout>


                    <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item field field--textBlock" id="latitudField">


                        <Label text="Latitud" cssClass="label" colSpan="2" row="0" />


                        <Label colSpan="2" row="1" text="{{ latitud }}" cssClass="label" textWrap="true" />

                        <!-- latitud content -->

                    </GridLayout>

                    <StackLayout cssClass="form-item-border" height="1"></StackLayout>


                    <GridLayout columns="*, *" rows="auto, auto" cssClass="form-item field field--textBlock" id="longitudField">


                        <Label text="Longitud" cssClass="label" colSpan="2" row="0" />


                        <Label colSpan="2" row="1" text="{{ longitud }}" cssClass="label" textWrap="true" />

                        <!-- longitud content -->

                    </GridLayout>

                    <StackLayout cssClass="form-item-border" height="1"></StackLayout>
                    <!-- additional view content -->


                </StackLayout>
            </GridLayout>

        </StackLayout>
    </ScrollView>
</Page>